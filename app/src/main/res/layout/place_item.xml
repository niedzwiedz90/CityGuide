<?xml version="1.0" encoding="utf-8"?>
<layout>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/paddingSmaller"
        android:layout_marginLeft="@dimen/paddingLower"
        android:layout_marginRight="@dimen/paddingLower"
        android:layout_marginTop="@dimen/paddingSmall"
        card_view:cardCornerRadius="@dimen/nano_padding">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/view_hex_color"
                android:layout_width="180dp"
                android:layout_height="130dp"
                android:background="@android:color/darker_gray"
                android:scaleType="centerCrop"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/paddingSmall"
                android:layout_marginEnd="@dimen/paddingSmall"
                android:layout_marginStart="@dimen/paddingSmall"
                android:layout_marginTop="@dimen/paddingSmall"
                android:lines="1"
                android:textSize="@dimen/text_small_body"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/text_name"
                tools:ignore="MissingConstraints"
                tools:text="developer" />

            <TextView
                android:id="@+id/text_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/paddingSmall"
                android:layout_marginStart="@dimen/paddingSmall"
                android:layout_marginTop="@dimen/paddingSmall"
                android:lines="1"
                android:textSize="@dimen/text_body"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/view_hex_color"
                tools:ignore="MissingConstraints"
                tools:text="Antony " />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</layout>

